<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="zedrox_slider" resource="default" engine="innodb" comment="slider Table">
        <column xsi:type="int" name="slider_id" unsigned="true" nullable="false" identity="true" comment="slider Id"/>
        <column xsi:type="varchar" name="title" nullable="true" length="255" default="null" comment="Title"/>
        <column xsi:type="int" name="status" nullable="true" default="0" comment="Status"/>
         <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="slider_id"/>
        </constraint>
    </table>
    <table name="zedrox_sliderimage" resource="default" engine="innodb" comment="sliderimage Table">
        <column xsi:type="int" name="image_id" unsigned="true" nullable="false" identity="true" comment="Image Id"/>
        <column xsi:type="smallint" name="status" nullable="true" comment="Status"/>
        <column xsi:type="varchar" name="title" nullable="true" length="255" default="null" comment="Title"/>
        <column xsi:type="varchar" name="description" nullable="true"  length="255" default="null" comment="Description"/>
        <column xsi:type="varchar" name="url_key" nullable="true"  length="255" default="null" comment="Url"/>
        <column xsi:type="varchar" name="image" nullable="true" length="255" default="null" comment="Image"/>
        <column xsi:type="varchar" name="mobile_image" nullable="true" length="255" default="null" comment="Mobile Image"/>
        <column xsi:type="int" name="slider_ids" unsigned="true" nullable="false" comment="Slider Ids"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="image_id"/>
        </constraint>
    </table>
</schema>
