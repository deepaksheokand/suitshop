<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- for image uploader-->
    <virtualType name="ImageUpload" type="Zedrox\ImageSlider\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">slider/tmp/image</argument>
            <argument name="basePath" xsi:type="string">slider/image</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Zedrox\ImageSlider\Controller\Adminhtml\Image\ImageUploader">
        <arguments>
            <argument name="imageUploader" xsi:type="object">ImageUpload</argument>
        </arguments>
    </type>
    <type name="Zedrox\ImageSlider\Controller\Adminhtml\Image\Save">
        <arguments>
            <argument name="imageUploader" xsi:type="object">ImageUpload</argument>
        </arguments>
    </type>
    <!-- /for image uploader-->
</config>
